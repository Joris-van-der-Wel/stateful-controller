{
  "name": "stateful-controller",
  "version": "0.0.0",
  "description": "This module provides a `Controller` class that implements the stateful controller pattern. Users can inherit from this class to implement their own stateful controllers. This pattern is useful for implementing single page web applications, as opposed to a more traditional web application following the stateless REST architecture.",
  "main": "./lib/Controller.js",
  "scripts": {
    "pretest": "jshint ./lib/Controller.js ./lib/DummyController.js",
    "test": "istanbul cover ./node_modules/nodeunit/bin/nodeunit test/Controller.js",
    "documentation": "jsdoc -r ./lib -d ./jsdoc --pedantic --verbose && jsdoc2md --src lib/* > ./jsdoc/api.md",
    "bundle": "browserify --outfile build/stateful-controller.js --standalone stateful-controller ./lib/Controller.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Joris-van-der-Wel/stateful-controller.git"
  },
  "keywords": [
    "api",
    "async",
    "browser",
    "browserify",
    "controller",
    "domv",
    "mvc",
    "promise",
    "state",
    "stateful"
  ],
  "author": "Joris van der Wel <joris@jorisvanderwel.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Joris-van-der-Wel/stateful-controller/issues"
  },
  "homepage": "https://github.com/Joris-van-der-Wel/stateful-controller",
  "jshintConfig": {
    "node": true,
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "immed": true,
    "indent": 8,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "nonbsp": true,
    "nonew": true,
    "quotmark": "single",
    "undef": true,
    "unused": "vars",
    "strict": true,
    "laxbreak": true
  },
  "devDependencies": {
    "browserify": "^8.0.1",
    "istanbul": "^0.3.5",
    "jsdoc": "^3.3.0-alpha13",
    "jsdoc-to-markdown": "^0.5.9",
    "jshint": "^2.5.11",
    "nodeunit": "^0.9.0"
  },
  "dependencies": {
    "bluebird": "^2.4.2",
    "inherits": "^2.0.1"
  }
}
